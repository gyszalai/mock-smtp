{
  "name": "mock-smtp",
  "version": "0.0.1",
  "description": "Mock SMTP server for integration tests",
  "main": "dist/index.js",
  "type": "module",
  "mocha": {
    "diff": true,
    "color": true,
    "exit": true,
    "recursive": true,
    "extension": [
      "ts"
    ],
    "loader": "ts-node/esm",
    "require": [
      "ts-node/register"
    ],
    "spec": [
      "src/**/*.spec.ts",
      "test/main.spec.ts"
    ]
  },
  "config": {
    "docker_ns": "gyszalai"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "tsc",
    "lint": "eslint --ignore-path .gitignore --fix src/**/*.ts",
    "test": "npm run build && mocha",
    "docker:build": "docker build -t $npm_package_config_docker_ns/$npm_package_name:latest .",
    "docker:publish": "npm run docker:build && docker tag $npm_package_config_docker_ns/$npm_package_name:$npm_package_version && docker push $npm_package_config_docker_ns/$npm_package_name:$npm_package_version && docker push $npm_package_config_docker_ns/$npm_package_name:latest",
    "prerelease": "git pull && npm run lint && npm run build && npm test",
    "release": "semantic-release --no-ci",
    "postrelease": "git push && git push --tags && echo 'released: '$npm_package_version && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gyszalai/mock-smtp.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gyszalai/mock-smtp/issues"
  },
  "homepage": "https://github.com/gyszalai/mock-smtp#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@types/chai": "^4.3.4",
    "@types/debug": "^4.1.7",
    "@types/dockerode": "^3.3.14",
    "@types/mailparser": "^3.4.0",
    "@types/mocha": "^10.0.1",
    "@types/smtp-server": "^3.5.7",
    "@types/supertest": "^2.0.12",
    "@types/wait-on": "^5.3.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "chai": "^4.3.7",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dockerode": "^3.3.4",
    "eslint": "^8.34.0",
    "lint-staged": "^13.1.2",
    "mocha": "^10.2.0",
    "rimraf": "^4.1.2",
    "semantic-release": "^20.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "env-schema": "^5.2.0",
    "fastify": "^4.13.0",
    "fastify-plugin": "^4.5.0",
    "husky": "^8.0.3",
    "mailparser": "^3.6.3",
    "pino": "^8.10.0",
    "smtp-server": "^3.11.0"
  }
}
