{
    "compilerOptions": {
        "target": "es2020",
        "lib": ["es2020"],
        "module": "es2020",

        "outDir": "./dist",
        "declarationDir": "./dist",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./src/**/*"],
    "exclude": ["dist", "node_modules", "**/*.spec.ts", "test"]
}
